{
  "name": "express-api-ts-boilerplate",
  "version": "0.2.4",
  "description": "Simple boiler plate for rest-api with express written in typescript",
  "main": "build/index.js",
  "scripts": {
    "pretty": "prettier -w src",
    "test": "mocha -r tsx src/**/**/*.spec.ts",
    "test:jest": "jest",
    "test:jest:watch": "jest --watch",
    "test:jest:coverage": "jest --coverage",
    "test:admin": "jest admin-auth-service.spec.ts",
    "dev": "nodemon",
    "start": "node ./build/index.js",
    "prebuild": "rm -rf ./build",
    "build": "tsc --build",
    "postbuild": "cp -r src/api-docs build/api-docs",
    "create-admin": "tsx src/scripts/create-admin.ts",
    "create-admin:env": "tsx src/scripts/create-admin-env.ts",
    "migration:start": "node ./build/app/scripts/migrate.js",
    "migration:revert": "node ./build/app/scripts/revert-migration.js",
    "migration:revertAll": "node ./build/app/scripts/revert-all-migrations.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/svijaykoushik/express-api-ts-boilerplate.git"
  },
  "keywords": [
    "express.js",
    "boiler-plate",
    "typescript",
    "rest-api"
  ],
  "author": "Vijaykoushik, S.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/svijaykoushik/express-api-ts-boilerplate/issues"
  },
  "homepage": "https://github.com/svijaykoushik/express-api-ts-boilerplate#readme",
  "dependencies": {
    "@types/mongoose": "^5.11.96",
    "bcrypt": "^6.0.0",
    "body-parser": "^2.2.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "jwk-to-pem": "^2.0.7",
    "mongoose": "^9.2.1",
    "nodemailer": "^8.0.1",
    "reflect-metadata": "^0.2.2",
    "swagger-jsdoc": "^6.2.8",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/chai-as-promised": "^8.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/helmet": "4.0.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/jwk-to-pem": "^2.0.3",
    "@types/node": "^25.0.3",
    "@types/nodemailer": "^7.0.10",
    "@types/sinon": "^21.0.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "chai-as-promised": "^8.0.2",
    "eslint": "^9.39.2",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "sinon": "^21.0.1",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
